MODULE status_0200 OUTPUT.
  SET PF-STATUS '0200'.
* SET TITLEBAR 'xxx'.
ENDMODULE.
*&---------------------------------------------------------------------*
*&      Module  USER_COMMAND_0200  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE user_command_0200 INPUT.

  CASE sy-ucomm.
    WHEN '&OK'.
    WHEN '&EXIT'.
      LEAVE TO SCREEN 0.
    WHEN '&SAS_CRT'.
      go_main->sas_create( ).
  ENDCASE.

ENDMODULE.
